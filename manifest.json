{
  "manifest_version": 3,
  "name": "LinkedIn Network Visualizer",
  "version": "1.0",
  "description": "Visualize your LinkedIn network connections",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["app/content/scrape.js", "app/content/attachElements.js", "app/content/attachVisualizer.js", "app/content/content.js"],
      "css": ["app/content/css/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "app/popup/popup.html",
    "default_title": "Network Visualizer"
  },
  "web_accessible_resources": [
    {
      "resources": ["app/resources/network.html", "app/resources/network-three-simple.js", "app/resources/three-bundle.js", "app/resources/orbit-controls-bundle.js", "app/resources/css2d-renderer-bundle.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}





