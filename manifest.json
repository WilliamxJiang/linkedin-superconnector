{
  "manifest_version": 3,
  "name": "0000 - Linkedin Map",
  "description": "Linkedin",
  "version": "0.1.0",

  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fonts/*.otf",
        "assets/images/*",
        "app/*",
        "auth/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "./app/popup/popup.html",
    "default_icon": {
      "16": "/assets/images/icon16.png"
    }
  },
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "icons": {
    "16": "/assets/images/icon16.png",
    "48": "/assets/images/icon16.png",
    "128": "/assets/images/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
            "./app/content/scrape.js",
            "./app/content/attachVisualizer.js",
            "./app/content/attachElements.js",
            "./app/content/content.js",
            "./app/content/loadfonts.js"
      ],
      "css": [
        "./app/content/css/content.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
